<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity"
    android:background="@drawable/background_color">

    <TextView
        android:id="@+id/tvTTST"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3F90B5"
        android:text="Thông tin chứng chỉ"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/editNameCC"
        android:layout_width="368dp"
        android:layout_height="45dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Tên chứng chỉ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332" />

    <EditText
        android:id="@+id/edtDateCC"
        android:layout_width="362dp"
        android:layout_height="52dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"

        android:hint="Ngày nhận"
        app:layout_constraintEnd_toEndOf="@+id/editNameCC"
        app:layout_constraintStart_toStartOf="@+id/editNameCC"
        app:layout_constraintTop_toBottomOf="@+id/editNameCC" />

    <EditText
        android:id="@+id/edtEndDate"
        android:layout_width="362dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"

        android:hint="Ngày hết hạn"
        app:layout_constraintEnd_toEndOf="@+id/edtDateCC"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtDateCC"
        app:layout_constraintTop_toBottomOf="@+id/edtDateCC" />

    <Button
        android:id="@+id/button3"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginTop="80dp"
        android:text="Edit "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEndDate" />

</androidx.constraintlayout.widget.ConstraintLayout>